<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Trail</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/trails/<%=trail._id%>?_method=PUT" 
              method="POST" 
              novalidate 
              class="validated-form"
              enctype="multipart/form-data">

            <!-- Trail Name -->
            <div class="mb-3">
                <label class="form-label" for="name">Trail Name</label>
                <input class="form-control" type="text" id="name" 
                       name="trail[name]" 
                       value="<%= trail.name %>" required>
                <div class="valid-feedback">
                    Valid Input
                </div>
            </div>

            <!-- Location -->
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" 
                       name="trail[location]" 
                       value="<%= trail.location %>" required>
                <div class="valid-feedback">
                    Valid Input
                </div>
            </div>

            <!-- Distance -->
            <div class="mb-3">
                <label class="form-label" for="distanceKm">Distance (km)</label>
                <input class="form-control" type="number" id="distanceKm" 
                       name="trail[distanceKm]" 
                       value="<%= trail.distanceKm %>" required>
                <div class="valid-feedback">
                    Valid Input
                </div>
            </div>

            <!-- Elevation Gain -->
            <div class="mb-3">
                <label class="form-label" for="elevationGain">Elevation Gain (m)</label>
                <input class="form-control" type="number" id="elevationGain" 
                       name="trail[elevationGain]" 
                       value="<%= trail.elevationGain %>" required>
                <div class="valid-feedback">
                    Valid Input
                </div>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" 
                          name="trail[description]" required><%= trail.description %></textarea>
                <div class="valid-feedback">
                    Valid Input
                </div>
            </div>

            <!-- Upload Images -->
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Add more image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>

            <!-- Existing Images with Delete Option -->
            <div class="mb-3">
                <% trail.images.forEach(function(img, i) {  %>
                  <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                  <div class="form-check-inline">
                      <input type="checkbox" id="image-<%=i%>" 
                             name="deleteImages[]" 
                             value="<%= img.filename %>">
                  </div>
                  <label for="image-<%=i%>">Delete?</label>
                <% }) %>
            </div>

            <!-- Submit -->
            <div class="mb-3">
                <button class="btn btn-info">Update Trail</button>
            </div>
        </form>

        <a href="/trails/<%= trail._id %>">Back To Trail</a>
    </div>
</div>