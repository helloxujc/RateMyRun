<% layout('layouts/boilerplate') %>

    <div id="cluster-map"></div>

    <div class="container">
        <h1>All Trails</h1>

        <% for (let trail of trails) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if (trail.images && trail.images.length) { %>
                            <img class="img-fluid" alt="" src="<%= trail.images[0].url %>">
                            <% } else { %>
                                <img class="img-fluid" alt=""
                                    src="https://res.cloudinary.com/dll6vua8p/image/upload/v1756494288/sporlab-XiZ7pRvCzro-unsplash_myposv.jpg">
                                <% } %>
                    </div>

                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"> <%= trail.name %> </h5>
                            <p class="card-text"> <%= trail.description %> </p>
                            <p class="card-text">
                                <small class="text-muted"> <%= trail.location %> </small>
                            </p>

                            <a class="btn btn-primary" href="/trails/<%= trail._id %>">
                                View <%= trail.name %>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>

    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
        const trails = { features: <%- JSON.stringify(trails) %> };
    </script>

    <script src="/javascripts/clusterMap.js"></script>